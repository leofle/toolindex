{
  "name": "webmcpreg",
  "version": "0.1.0",
  "description": "CLI tool for validating and publishing WebMCP manifests to the Web MCP Registry",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/user/toolindex.git",
    "directory": "tools/cli"
  },
  "keywords": [
    "webmcp",
    "mcp",
    "manifest",
    "registry",
    "cli",
    "validation"
  ],
  "bin": {
    "webmcpreg": "dist/webmcpreg.js"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --target=node18 --outfile=dist/webmcpreg.js --banner:js='#!/usr/bin/env node'",
    "dev": "tsc --watch --noEmit",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@toolindex/validator": "workspace:*",
    "chalk": "^4.1.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "esbuild": "^0.24.0",
    "typescript": "^5.7.0"
  }
}
