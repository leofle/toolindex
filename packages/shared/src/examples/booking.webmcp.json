{
  "manifest_version": "0.1",
  "origin": "https://stays.example.com",
  "tools": [
    {
      "name": "search_availability",
      "description": "Search for available rooms or properties by location, dates, and guest count. Returns a list of options with pricing.",
      "input_schema": {
        "type": "object",
        "properties": {
          "location": { "type": "string", "description": "City, region, or property name." },
          "check_in": { "type": "string", "format": "date", "description": "Check-in date (YYYY-MM-DD)." },
          "check_out": { "type": "string", "format": "date", "description": "Check-out date (YYYY-MM-DD)." },
          "guests": { "type": "integer", "minimum": 1, "description": "Number of guests." },
          "max_price_per_night": { "type": "number", "minimum": 0, "description": "Budget cap per night in USD." }
        },
        "required": ["location", "check_in", "check_out", "guests"],
        "additionalProperties": false
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "listings": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "listing_id": { "type": "string" },
                "name": { "type": "string" },
                "price_per_night": { "type": "number" },
                "currency": { "type": "string" },
                "rating": { "type": "number" },
                "image_url": { "type": "string", "format": "uri" }
              }
            }
          },
          "total_results": { "type": "integer" }
        },
        "required": ["listings", "total_results"],
        "additionalProperties": false
      },
      "risk_level": "low",
      "requires_user_confirm": false,
      "pricing": { "model": "free" },
      "tags": ["booking", "search", "travel"],
      "version": "1.2.0"
    },
    {
      "name": "reserve",
      "description": "Create a reservation for a listing. Places a hold on the user's payment method. The hold is charged at check-in.",
      "input_schema": {
        "type": "object",
        "properties": {
          "listing_id": { "type": "string", "description": "The listing to book." },
          "check_in": { "type": "string", "format": "date" },
          "check_out": { "type": "string", "format": "date" },
          "guests": { "type": "integer", "minimum": 1 },
          "special_requests": { "type": "string", "maxLength": 500, "description": "Optional notes for the host." }
        },
        "required": ["listing_id", "check_in", "check_out", "guests"],
        "additionalProperties": false
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "reservation_id": { "type": "string" },
          "status": { "type": "string" },
          "total_price": { "type": "number" },
          "currency": { "type": "string" },
          "cancellation_deadline": { "type": "string", "format": "date-time" }
        },
        "required": ["reservation_id", "status", "total_price", "currency"],
        "additionalProperties": false
      },
      "risk_level": "high",
      "requires_user_confirm": true,
      "pricing": { "model": "per_call", "cost_estimate": "Platform fee: 3% of booking total" },
      "tags": ["booking", "reservation", "travel"],
      "version": "1.2.0"
    },
    {
      "name": "cancel_reservation",
      "description": "Cancel an existing reservation. Refund amount depends on cancellation policy and timing relative to the cancellation deadline.",
      "input_schema": {
        "type": "object",
        "properties": {
          "reservation_id": { "type": "string", "description": "The reservation to cancel." },
          "reason": { "type": "string", "maxLength": 256, "description": "Optional cancellation reason." }
        },
        "required": ["reservation_id"],
        "additionalProperties": false
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "reservation_id": { "type": "string" },
          "status": { "type": "string" },
          "refund_amount": { "type": "number" },
          "currency": { "type": "string" }
        },
        "required": ["reservation_id", "status", "refund_amount", "currency"],
        "additionalProperties": false
      },
      "risk_level": "high",
      "requires_user_confirm": true,
      "pricing": { "model": "free" },
      "tags": ["booking", "cancellation", "travel"],
      "version": "1.2.0"
    }
  ],
  "auth": {
    "requires_login": true,
    "oauth_scopes": ["bookings:read", "bookings:write", "payments:hold"]
  }
}
